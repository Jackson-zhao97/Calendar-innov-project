<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:gravity="center"
    android:background="@color/darken_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popup_window"
        android:layout_width="@dimen/dialog_window_width"
        android:layout_height="@dimen/dialog_window_height"
        android:background="@color/white"
        android:orientation="vertical" >
      <TextView
            android:layout_marginTop="15dp"
          android:textColor="#000000"
          android:textSize="18dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:gravity="center"
          android:text="活动提醒" />
 
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="left"
            android:text="@string/default_title"
            android:textColor="@color/dialog_title_text_color"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:id="@+id/title_divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_above="@+id/lyou_btn"
            android:background="@color/dialog_title_divider" />

              <TextView
                      android:id="@+id/tv_ok"
                  android:layout_width="fill_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="我知道了"
                 android:textColor="#01aaec"
                  android:textSize="15dp" />

       <!--      <TextView
                android:textColor="#01aaec"
                android:gravity="center"
                android:id="@+id/tv_ok"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="我知道了"
              android:textSize="@dimen/tv_text_size" /> -->
     


    </LinearLayout>

</LinearLayout>