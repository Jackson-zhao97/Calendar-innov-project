<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   



    <View
 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e4e4e4" />
        <RelativeLayout
          android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center_vertical" >
            <TextView
                android:textColor="#1a1a1a"
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_margin_Right_left"
                android:text="选项名称"
                android:textSize="@dimen/item_textSize" />

<!--       <com.example.titlebar.SwitchView
        android:layout_marginRight="@dimen/item_margin_Right_left"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/view_switch"
        android:layout_width="50dp"
        android:layout_height="30dp" /> -->

        <ToggleButton
            android:id="@+id/view_switch"
            android:layout_marginRight="@dimen/item_margin_Right_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/tog_selector"
            android:textOff=""
            android:textOn="" />

        </RelativeLayout>
</LinearLayout>
