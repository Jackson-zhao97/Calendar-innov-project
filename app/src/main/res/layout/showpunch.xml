<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
   <LinearLayout
         android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
 
             <ImageView 
       android:id="@+id/red_ball"
           android:layout_marginRight="1dp"
           android:layout_width="@dimen/punch_circle"
           android:layout_height="@dimen/punch_circle"
         android:background="@drawable/no_press"
         /> 
              <ImageView 
            android:id="@+id/yellow_ball"
          android:layout_marginRight="1dp"
           android:layout_width="@dimen/punch_circle"
           android:layout_height="@dimen/punch_circle"
         android:background="@drawable/no_press"
         /> 
          <ImageView 
              android:id="@+id/green_ball"
          android:layout_marginRight="1dp"
           android:layout_width="@dimen/punch_circle"
           android:layout_height="@dimen/punch_circle"
         android:background="@drawable/no_press"
         /> 
         <ImageView 
             android:id="@+id/blue_ball"
           android:layout_marginRight="1dp"
           android:layout_width="@dimen/punch_circle"
           android:layout_height="@dimen/punch_circle"
         android:background="@drawable/no_press"
         /> 
      <ImageView 
               android:id="@+id/purple_ball"
           android:layout_width="@dimen/punch_circle"
           android:layout_height="@dimen/punch_circle"
         android:background="@drawable/no_press"
         android:layout_marginRight="1dp"
         />
</LinearLayout>
</RelativeLayout>
